@model FinalProject.Pages.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Cat</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Cat.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Cat.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Cat.Age)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Cat.Age)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Cat.Breed)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Cat.Breed)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Cat.Color)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Cat.Color)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Cat.Gender)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Cat.Gender)
        </dd>
    </dl>
        <h3>Current Active Appliations</h3>
        <hr />
        <dl class="row">
        @foreach(var r in Model.Cat.Application)
        {
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => r.FirstName)
            </dt>
            <dd class="col-sm-2">
                @Html.DisplayFor(model => r.FirstName)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => r.LastName)
            </dt>
            <dd class="col-sm-2">
                @Html.DisplayFor(model => r.LastName)
            </dd>
            <dt class="col-sm-4">
                <form method="post">
                    <input type="hidden" asp-for="ApplicationIDToDelete" value="@r.ApplicationID" />
                    <input type="submit" asp-page-handler="RemoveApplication" asp-route-id="@Model.Cat.CatID" value="Remove Application" class="btn btn-danger btn-sm" />
                </form>
            </dt>
        }
    </dl>
</div>
