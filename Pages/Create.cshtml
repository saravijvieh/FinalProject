@page
@model FinalProject.Pages.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Place A Cat Up For Adoption</h1>


<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Cat.Name" class="control-label"></label>
                <input asp-for="Cat.Name" class="form-control" />
                <span asp-validation-for="Cat.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Cat.Age" class="control-label"></label>
                <input asp-for="Cat.Age" class="form-control" />
                <span asp-validation-for="Cat.Age" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Cat.Breed" class="control-label"></label>
                <input asp-for="Cat.Breed" class="form-control" />
                <span asp-validation-for="Cat.Breed" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Cat.Color" class="control-label"></label>
                <input asp-for="Cat.Color" class="form-control" />
                <span asp-validation-for="Cat.Color" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Cat.Gender" class="control-label"></label>
                <input asp-for="Cat.Gender" class="form-control" />
                <span asp-validation-for="Cat.Gender" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Submit" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}